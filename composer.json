{
    "name": "fortes_e-commerce",
    "description": "RESTful API for E-commerce Application - Practical Exam (PHP)",
    "authors": [
        {
            "name": "Jherilyn Fortes",
            "email": "jherilyn@example.com"
        }
    ],
    "keywords": [
        "ecommerce",
        "rest-api",
        "php",
        "api"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}